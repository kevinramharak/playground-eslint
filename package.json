        "serve": "^11.3.2",
        "typescript": "latest",
        "vite": "^2.3.2",
        "vls": "^0.7.2",
        "vue-tsc": "^0.0.24"
    },
    "dependencies": {
        "tslib": "^1.10.0",
        "vue": "^3.0.5"
