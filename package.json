{
    "name": "typescript-playground-plugin-vue",
    "version": "1.0.0",
    "main": "dist/index.js",
    "private": true,
    "description": "A template to build a playground plugin with Vue 3",
    "license": "MIT",
    "keywords": [
        "playground-plugin",
        "playground-plugin-template"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/kevinramharak/typescript-playground-plugin-vue"
    },
    "scripts": {
